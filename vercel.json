{
  "buildCommand": "npm run build:prod",
  "outputDirectory": "www",
  "rewrites": [
    {
      "source": "/((?!api|assets|uploads|.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/uploads/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

